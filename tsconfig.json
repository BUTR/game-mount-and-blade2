{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "rootDir": "./src",
      "outDir": "./out",
      "jsx": "react",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "sourceMap": false
    },
      "exclude": [
        "node_modules"
      ],
    "files": [
      "src/index.ts"
    ]
}