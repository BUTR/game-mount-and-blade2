{
    "name": "game-mount-and-blade-ii-bannerlord-butr",
    "version": "0.5.0",
    "description": "A Vortex extension for Mount and Blade II: Bannerlord mod management.",
    "author": "BUTR Team & Black Tree Gaming Ltd.",
    "license": "GPL-3.0+",
    "main": "./dist/index.js",
    "config": {
        "extensionName": "Game: Mount and Blade II: Bannerlord (BUTR)",
        "issueTracker": "https://github.com/BUTR/game-mount-and-blade2/issues"
    },
    "scripts": {
        "build": "pwsh ./build.ps1",
        "build-debug": "pwsh ./build.ps1",
        "build-light": "pwsh ./build-light.ps1",
        "build-pack": "npm run webpack && extractInfo",
        "clean": "shx rm *.tgz && shx rm *.7z && shx rm -rf ./dist",
        "clear-caches": "jest --clearCache",
        "lint": "eslint -c .eslintrc.build.json src test",
        "lint-fix": "eslint -c .eslintrc.build.json --fix src test && prettier --write",
        "pre-commit": "lint-staged",
        "test-debug": "jest --clearCache && node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --verbose=true --silent=false --no-cache",
        "repl": "ts-node -r tsconfig-paths/register",
        "webpack": "node ./node_modules/webpack/bin/webpack --config webpack.config.js --color",
        "bundle7z": "7z a -t7z game-mount-and-blade2.7z ./dist/*.*"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.20",
        "@types/glob": "^7.2.0",
        "@types/lodash": "^4.14.184",
        "@types/mock-fs": "^4.13.1",
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.0",
        "@types/react-bootstrap": "^0.32.20",
        "@types/react-redux": "^7.1.24",
        "@types/redux": "^3.6.0",
        "@types/redux-thunk": "^2.1.0",
        "@types/semver": "^7.3.12",
        "@types/webpack": "^4.41.32",
        "@types/xml2js": "^0.4.11",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "7z-bin": "github:Nexus-Mods/7z-bin",
        "bluebird": "^3.7.2",
        "collections": "github:Nexus-Mods/extension-collections",
        "copy-webpack-plugin": "^6.4.1",
        "copyfiles": "^2.4.1",
        "eslint": "^8.34.0",
        "eslint-config-airbnb-typescript": "^16.1.1",
        "eslint-plugin-import": "^2.25.4",
        "glob": "^8.0.3",
        "i18next": "^21.0.0",
        "lint-staged": "^12.3.5",
        "mock-fs": "5.2.0",
        "node-loader": "^1.0.3",
        "react": "^16.12.0",
        "react-bootstrap": "^0.33.1",
        "react-dom": "^16.12.0",
        "react-i18next": "^11.11.0",
        "react-redux": "^7.1.3",
        "redux-act": "^1.7.7",
        "shx": "^0.3.4",
        "ts-loader": "^9.2.1",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.13.0",
        "typescript": "^4.5.0",
        "vortex-api": "github:Nexus-Mods/vortex-api",
        "webpack": "^4.35.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "@butr/vortexextensionnative": "file:butr-vortexextensionnative-1.0.0.tgz"
    }
}
